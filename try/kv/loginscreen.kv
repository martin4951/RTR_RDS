#: import utils kivy.utils

<LoginScreen>:

	FloatLayout:
		canvas:
			Color:
				rgba: utils.get_color_from_hex("#0b172E")
			Rectangle:
				pos: self.pos
				size: self.size
				
		
	BoxLayout:
		orientation: "vertical"
		pos_hint: {"right": 0.5, "top": 0.8}
		size_hint: (None, None)
		width: "330dp"
		height: "400dp"
		canvas:
			Color:
				rgba: utils.get_color_from_hex("#ffffff")
			Rectangle:
				pos: self.pos
				size: self.size
		Spacer:
			size_hint: (0.5, 0.05)
		Label:
			text: "[b][i]Realtime[/i] system monitoring for [color=5D87A1]water flow metering[/color][/b]."
			font_size: "20sp"
			color: 0.4,0.411,0.5411,1  #rgba - Value needs to be between 0 and 1, so if r=180, it's 180/255
			#0.3647, 0.5294, 0.63137, 1
			text_size: (280,None)
			size_hint: (1,0.2)
			markup: True
		Spacer:
			size_hint: (1, 0.10)   #Take up 5% so the image has 70% of the space
		
		Image:
			source: "icons/rtr-logo3.png"
			size_hint: (0.76, 0.85)
			pos_hint: {"right": 0.9}
			
	BoxLayout:
		pos_hint: {"right": 0.7, "top": 0.8}
		height: "400dp"
		width: "330dp"
		orientation: "vertical"
		size_hint: (None, None)
		canvas:
			Color:
				rgba: utils.get_color_from_hex("#0c1e3c")
			Rectangle:
				size: self.size
				pos: self.pos
		BoxLayout:
			size_hint: (1, 0.1) 	#100% of the width, 10% of the height
			orientation: "horizontal"
			Spacer:
				size_hint: (0.5, 0.7)		#Horizontal layout so the width is shared - Width = 50%
			Button:
				size_hint: (0.15, 0.5)		#Width = 65%
				text: "LOG IN"
				font_size: "12sp"
				font_name: 'barlow-bold'
				background_normal: ''
				background_color: 0.027,0.180,0.380,1
				on_release: 
					#signup
			Button:
				size_hint: (0.15, 0.5)		#Width = 80%
				text: "SIGN UP"
				font_size: "12sp"
				font_name: 'barlow-bold'
				background_normal: ''
				background_color: 0.039,0.4392,0.984,1
				on_release: app.process_signup_btn()
				
			Spacer:
				size_hint: (0.2, 1)		#Width = 100%
				
##----------------------------Start of name row---------------------------------------------------##
		Spacer:
			size_hint: (1,0.15)

##----------------------------End of name row---------------------------------------------------##
##----------------------------Start of email row------------------------------------------------##
		BoxLayout:
			size_hint: (1,0.15)
			orientation: "vertical"
			Label:
				text: "Email:"
				fontsize: "12sp"
				font_name: 'barlow-reg'
				pos_hint: {'right': 0.15}
				size_hint: (0.1, 0.4)
			TextInput:
				hint_text: "example@email.com"
				font_size: "13sp"
				font_name: 'barlow-reg'
				pos_hint: {'right': 0.89}
				size_hint: (0.85, 0.6)
				background_color: 0,0,0,0
				foreground_color: 0.8,0.8,0.8,1
			
			Separator:						#Class extends FloatLayout so we cna threat as a FLoatLayout
				width: "240dp"
				size_hint: (0.85, 0.01)
				pos_hint: {'right': 0.91}
				canvas:
					Color:
						rgba: utils.get_color_from_hex('#2a2f44')
					Rectangle:
						size: self.size
						pos: self.pos
			Spacer:
				size_hint: (0.1, 0.18)	
##----------------------------End of email row---------------------------------------------------##
##----------------------------Start of password row------------------------------------------------##
		BoxLayout:
			size_hint: (1,0.15)
			orientation: "vertical"
			Label:
				text: "Password:"
				fontsize: "12sp"
				font_name: 'barlow-reg'
				pos_hint: {'right': 0.19}
				size_hint: (0.1, 0.4)
			TextInput:
				password: True
				hint_text: "***************"
				font_size: "13sp"
				font_name: 'barlow-reg'
				pos_hint: {'right': 0.89}
				size_hint: (0.85, 0.6)
				background_color: 0,0,0,0
				foreground_color: 0.8,0.8,0.8,1
			
			Separator:						#Class extends FloatLayout so we cna threat as a FLoatLayout
				width: "240dp"
				size_hint: (0.85, 0.01)
				pos_hint: {'right': 0.91}
				canvas:
					Color:
						rgba: utils.get_color_from_hex('#2a2f44')
					Rectangle:
						size: self.size
						pos: self.pos
			Spacer:
				size_hint: (0.1, 0.18)	
##----------------------------End of password row---------------------------------------------------##
		Spacer:
			size_hint: (1,0.28)

##----------------------------Start of Log In (last) row-----------------------------------------------##
		BoxLayout:
			size_hint: (1, 0.12)
			orientation: "horizontal"
			Label:
				text: ""
				size_hint: (0.05, 1)
			Button:
				size_hint: (0.25, 0.6)
				background_normal: ''
				background_color: 0.0039, 0.4392, 0.984, 1
				text: "Log In"
				font_size: "12sp"
				font_name: 'barlow-bold'
				on_release: app.process_login()
				
			LabelButton:
				text: "Not signed up? [u]Register here[/u]."
				color: 0.4039, 0.4156, 0.545, 1
				markup: True
				font_size: "13sp"
				size_hint: (0.7, 0.5)
				on_release:
					#Change to login screen
		Spacer:
			size_hint: (1, 0.1)
					

		Spacer:
			size_hint: (1,0.01)
